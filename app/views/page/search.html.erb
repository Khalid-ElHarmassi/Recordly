<h1>Search Results</h1>

<h1>Albums</h1>

<% if @album_results.present? %>
    <%= render 'shared/album' %>
<% else %>
    <p>There are no albums containing the term(s) <%= params[:search] %>.</p>
<% end %>
<hr/>

<h1> Songs</h1>
<% if @song_results.present? %>
    <%= render 'shared/song' %>
<% else %>
    <p>There are no songs containing the term(s) <%= params[:search] %>.</p>
<% end %>
<hr/>

<h1> Artists</h1>
<% if @artist_results.present? %>
    <%= render 'shared/artist' %>
<% else %>
    <p>There are no artists containing the term(s) <%= params[:search] %>.</p>
<% end %>
<hr/>
