<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>

      <th>Song title</th>
      <th>Album</th>
      <th>Favorite song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>

        <td><%= song.spng_title %></td>
        <td><%= song.album_id %></td>
        <td style="text-align:center"><% if song.favorite_song %>
              &#10004;

          <% else %> &nbsp; <% end %>
        </td>

        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

