<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Album title</th>
      <th>Album date</th>
      <th>Favorite album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.album_title, album_path(album) %></td>
        <td><%= album.album_date %></td>

        <td style="text-align:center"><% if album.favorite_album %>
              &#10004;

          <% else %> &nbsp; <% end %>
        </td>



        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

